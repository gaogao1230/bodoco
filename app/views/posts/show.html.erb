<h2>ツイート詳細</h2>
<div class="card user_show">
    <div class="card-body">
        <img class="img-fluid mb-3" width="100" height="100" src="<%= @post.user.image %>">
        <p><%= @post.content %></p>
        <div class="mt-3">
            <img src="<%= @post.image1 %>" width="200" class="ml-3">
            <img src="<%= @post.image2 %>" width="200" class="ml-3">
            <p class="mt-3"><%= @post.created_at %></p>
        </div>
        <%= render "favorites/likes_button", post: @post %>
    </div>
</div>
<h2 class="my-3">コメント</h2>
<%= form_with(model: @comment, local: true) do |f| %>
    <div class="form-group">
        <%= f.text_area :content, class: 'form-control', rows: 5 %>
        <%= hidden_field_tag :post_id, @post.id %> 
    </div>
    <%= f.submit "投稿", class: 'btn btn-primary' %>
<% end %>

<h2 class="my-3">コメント一覧</h2>
<% @post.comments.each do |comment| %>
    <div class="card mt-2">
        <div class="card-body">
            <p><%= comment.content %></p>
            <% if current_user == comment.user %>
                <p><%= link_to "削除",comment_path(comment),method: :delete,data: {confirm:"削除してもよろしいですか？"},class:"btn btn-primary"%></p>
            <% end %>
        </div>
    </div>
<% end %>