<ul class="list-unstyled">
    <% posts.each do |post| %>
    <li>
        <div class="row">
            <div class="col-sm-2">
                <img class="rounded img-fluid" src="<%= post.user.image %>">
            </div>
            <div class="col-sm-10">
                <a href="<%= post_path(post) %>"><%= post.content %></a>
            </div>
        </div>
        <% if current_user == post.user %>
            <p><%= link_to "削除",post,method: :delete,data: {confirm:"削除してよろしいですか？"},class:"btn btn-danger btn-sm" %></p>
        <% end %>
    </li>
    <% end %>
    <%= paginate posts %>
</ul>