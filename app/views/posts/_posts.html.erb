<ul class="list-unstyled mb-5">
    <% posts.each do |post| %>
    <div class="card mt-3 mb-3">
        <div class="card-body">
            <li>
                <div class="row">
                    <div class="col-sm-2 offset-sm-1">
                            <% if post.user.image? %>
                            <img id="post_user_image" class="img-fluid" width="50" height="50" src="<%= post.user.image %>">
                          <% else %>
                            <img id="post_user_image" src="/assets/fallback/default.jpg"　width="50" heigth="50" alt="ユーザーアイコン">
                          <% end %>
                    </div>
                    <div class="col-sm-9">
                        <%= link_to post.content, post %>
                        <div class="mt-3">
                        <% if post.image1? %>
                            <img src="<%= post.image1 %>" width="200" class="ml-3 mt-2">
                        <% end %>
                        <% if post.image2? %>
                            <img src="<%= post.image2 %>" width="200" class="ml-3 mt-2">
                        <% end %>
                        <% if current_user == post.user %>
                            <p><%= link_to "削除",post,method: :delete,data: {confirm:"削除してよろしいですか？"},class:"btn btn-danger btn-sm mt-2" %></p>
                        <% end %>
                    </div>
                    </div>
                </div>
            </li>
        </div>
    </div>
    <% end %>
    <%= paginate posts %>
</ul>