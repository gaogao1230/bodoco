<ul class="list-unstyled">
    <% posts.each do |post| %>
    <div class="card mt-2">
        <div class="card-body">
            <li>
                <div class="row">
                    <div class="col-sm-2">
                        <img id="post_user_image" class="img-fluid" width="100" height="100" src="<%= post.user.image %>">
                    </div>
                    <div class="col-sm-10">
                        <%= link_to post.content, post %>
                    </div>
                    <div class="mt-3">
                        <img src="<%= post.image1 %>" width="200" class="ml-3">
                        <img src="<%= post.image2 %>" width="200" class="ml-3">
                    </div>
                </div>
                <% if current_user == post.user %>
                    <p><%= link_to "削除",post,method: :delete,data: {confirm:"削除してよろしいですか？"},class:"btn btn-danger btn-sm" %></p>
                <% end %>
            </li>
        </div>
    </div>
    <% end %>
    <%= paginate posts %>
</ul>