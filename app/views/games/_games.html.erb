<h1 class="my-3">ボードゲーム一覧</h1>
<ul class="list-unstyled">
    <% games.each do |game| %>
    <div class="card mt-2">
        <div class="card-header">
            <h3><%= game.name %></h3>
        </div>      
        <div class="card-body">
            <li class="game">
                <div class="row">
                    <div class="col-sm-3">
                        <img class="mr-2 rounded" width="100" height="100" src="<%= game.image %>">
                    </div>
                    <div class="col-sm-9">
                        <p>プレイ人数：<%= game.play_people %>人</p>
                        <p>プレイ時間：<%= game.play_time %>分</p>
                        <p><%= link_to "詳細表示",game %></p>
                    </div>
                </div>
            </li>
        </div>
    </div>
    <% end %>
</ul>
<%= paginate games %>